<tr>
  <td><%= badge.id %></td>
  <td>
    <%= badge.title %><br>
    <%= t('.body') %>: <%= badge.body %><br>
    <%= t('.criterion') %>: <%= badge.criterion %>
  </td>
  <td align="center"><%= image_tag(badge.body, :alt => "Badges") %></td>
  <td align="center">
    <%= link_to 'show', admin_badge_path(badge) %> |
    <%= link_to 'edit', edit_admin_badge_path(badge) %> |
    <%= link_to 'delete', admin_badge_path(badge),
            method: :delete,
            data: { confirm: 'Are you sure?' }%>
  </td>
</tr>
