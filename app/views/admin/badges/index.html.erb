<div class="container mt-3">
  <h1><%= t('.header') %></h1>

  <%= render 'shared/errors', obj: @test %>

  <div class="container">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr style='border-bottom: 1pt solid black'>
          <th class="align-middle"><%= t('.table_header.id') %></th>
          <th class="align-middle">
            <%= t('.table_header.title') %> |
            <%= t('.table_header.body') %> |
            <%= t('.table_header.rule_name') %> |
            <%= t('.table_header.rule_value') %>
          </th>
          <th style="text-align:center" class="align-middle"><%= t('.table_header.picture') %></th>
          <th colspan="3" style="text-align:center" class="align-middle"><%= t('.table_header.actions') %></th>
        </tr>
      </thead>
      <%= render @badges %>
    </table>
   </div>

  <div class="container">
    <%= link_to t('.new_badge'), new_admin_badge_path %><br>
  </div>
</div>

