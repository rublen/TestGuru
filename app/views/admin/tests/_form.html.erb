<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', obj: @test %>
  <div class="actions container border rounded pt-3 pb-3">
    <p>
      <%= form.label :title %>
      <%= form.text_field :title, id: :test_title %>
    </p>
    <p>
      <%= form.label :level %>
      <%= form.number_field :level, id: :test_level %>
    </p>
    <p>
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
    </p>
    <p>
      <%= form.label :duration %>
      <%= form.number_field :duration, id: :test_duration %> min
    </p>
    <%= form.submit %>
  </div>
<% end %><br>

<%= link_to t('.link_to_tests'), admin_tests_path %>
