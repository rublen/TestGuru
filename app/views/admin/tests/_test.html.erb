<tr>
  <td class="align-middle"><%= test.id %></td>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle">
    <%= link_to 'edit',
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle"><%= test.category.title %></td>
  <td class="align-middle" align="center"><%= test.level %></td>
  <td class="align-middle" align="center"><%= test.questions.count %></td>
  <td class="align-middle"><%= link_to 'show', admin_test_path(test) %></td>
  <td class="align-middle"><%= link_to 'delete', admin_test_path(test),
          method: :delete,
          data: { confirm: 'Are you sure?' }%>
  </td>
</tr>
