    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class='nav user'>
        Welcome<b><%= current_user.email%></b>
      </p>
    <% end %>

    <%= yield %>

    <div class='footer'>
      <p>
        <%= "#{current_year}.   Project " %>
        <%= link_to_github('rublen', 'TestGuru') %>
        whithin RoR course of online coding school
        <%= link_to 'Thinknetica', 'http://thinknetica.com', target: :_blank %>
      </p>
    </div>
  </body>
</html>
