<% if obj&.errors.present? %>
  <div class="resource-errors" data-resource-id="<%= obj.id %>">
    <h3 style='color:Red'>
      <%= t('.header', count: obj.errors.full_messages.size) %>
    </h3>
    <% obj.errors.full_messages.each do |message| %>
      <li style='color:Red'><%= message %></li>
    <% end %><br>
  </div>
<% end %>
